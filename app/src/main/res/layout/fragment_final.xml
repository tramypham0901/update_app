<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".markFragment.Semester1Fragment">


    <LinearLayout
        android:id="@+id/linear_mark_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6E97EC"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DS_txtTen_Title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Môn học"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:text="Điểm HK I"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:text="Điểm HK II"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:text="Cuối năm"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:text="Đánh giá"
            android:textSize="15sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/mark_list"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginTop="50dp" />

</FrameLayout>